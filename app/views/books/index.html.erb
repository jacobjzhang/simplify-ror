<h1 class="current-category"><% params[:category] %></h1>

<% if @books.count == 0 %>
    <h1>There are currently no books in this category.</h1>
<% else %>

    <div class="row">

    <% @books.each do |book| %>
        <div class="col-md-3">

            <a href="/books/<%= book.id %>">
                <%= image_tag book.book_img.url(:book_index), class: "book" %>
            </a>
        </div>
        
        <% if false %>
        <h2><%= link_to book.title, book_path(book) %></h2>
        <% end %>
    
    <% end %>
    
    </div>

    <%= link_to "Add Book", new_book_path  %>
<% end %>